{
	"private": true,
	"name": "vscode-analog",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/analogjs/language-tools.git",
		"directory": "packages/vscode"
	},
	"categories": [
		"Programming Languages"
	],
	"displayName": "AnalogJS Language Features",
	"description": "AnalogJS Language Features",
	"author": "Brandon Roberts",
	"publisher": "analogjs",
	"engines": {
		"vscode": "^1.82.0"
	},
	"icon": "images/analog.png",
	"activationEvents": [
		"onLanguage:analog"
	],
	"main": "./dist/client.js",
	"contributes": {
		"languages": [
			{
				"id": "analog",
				"icon": {
					"light": "images/analog.png",
					"dark": "images/analog.png"
				},
				"extensions": [
					".analog"
				],
				"configuration": "./languages/vue-language-configuration.json"
			},
			{
				"id": "markdown",
				"configuration": "./languages/markdown-language-configuration.json"
			},
			{
				"id": "html",
				"configuration": "./languages/sfc-template-language-configuration.json"
			},
			{
				"id": "jade",
				"configuration": "./languages/sfc-template-language-configuration.json"
			},
			{
				"id": "plaintext",
				"configuration": "./languages/sfc-template-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "analog",
				"scopeName": "source.analog",
				"path": "./syntaxes/vue.tmLanguage.json",
				"embeddedLanguages": {
					"source.analog": "analog",
					"text": "plaintext",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"text.pug": "jade",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.js.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"meta.tag.js": "jsx-tags",
					"meta.tag.tsx": "jsx-tags",
					"meta.tag.without-attributes.js": "jsx-tags",
					"meta.tag.without-attributes.tsx": "jsx-tags",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				},
				"unbalancedBracketScopes": [
					"keyword.operator.relational",
					"storage.type.function.arrow",
					"keyword.operator.bitwise.shift",
					"meta.brace.angle",
					"punctuation.definition.tag"
				]
			},
			{
				"scopeName": "vue.directives",
				"path": "./syntaxes/vue-directives.json",
				"injectTo": [
					"source.analog",
					"text.html.markdown",
					"text.html.derivative",
					"text.pug"
				]
			},
			{
				"scopeName": "vue.interpolations",
				"path": "./syntaxes/vue-interpolations.json",
				"injectTo": [
					"source.analog",
					"text.html.markdown",
					"text.html.derivative",
					"text.pug"
				]
			}
		]
	},
	"scripts": {
		"build": "node scripts/build -- --minify",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"devDependencies": {
		"@html1/language-server": "workspace:*",
		"@types/vscode": "^1.82.0",
		"@volar/language-server": "~2.1.0",
		"@volar/vscode": "~2.1.0",
		"esbuild": "latest",
		"vsce": "latest",
		"vscode-languageclient": "^9.0.1"
	}
}
